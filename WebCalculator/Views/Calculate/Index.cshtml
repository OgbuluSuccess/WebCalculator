            if (y == "/" || y == "+" || y == "*" || y == "-") { } else {
                $("#txt").val(x + "+")
            }
        });
        $("#dot").click(function () {
            var x = document.getElementById("txt").value;
            var y = x.slice(-1)
            if (y == ".") { } else {
                $("#txt").val(x + ".")
            }
        });
        $("#ce").click(function () {
            var x = document.getElementById("txt").value;
            $("#txt").val(x.substring(0, x.length - 1))
        });
    });
